<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:text="@string/firstName"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstName"
        android:layout_toEndOf="@+id/firstName"
        android:layout_marginTop="10dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/firstName"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/lastName"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lastName"
        android:layout_toEndOf="@+id/lastName"
        android:layout_below="@+id/firstName"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/lastName"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/phone"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/phone"
        android:layout_toEndOf="@+id/phone"
        android:layout_below="@+id/lastName"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/email"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:layout_below="@+id/phone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/address"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/address"
        android:layout_toEndOf="@+id/address"
        android:layout_below="@+id/email"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/postalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/address"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/postalCode"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/postalCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/postalCode"
        android:layout_toEndOf="@+id/postalCode"
        android:layout_below="@+id/address"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/postalCode"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/city"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/city"
        android:layout_toEndOf="@+id/city"
        android:layout_below="@+id/postalCode"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/city"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/country"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/countryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/country"
        android:layout_toEndOf="@+id/country"
        android:layout_below="@+id/city"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/country"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/gender"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/genderEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/gender"
        android:layout_toEndOf="@+id/gender"
        android:layout_below="@+id/country"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/gender"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/dateOfBirth"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/bdayEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bday"
        android:layout_toEndOf="@+id/bday"
        android:layout_below="@+id/gender"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@+id/bday"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/password"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/password"
        android:layout_toEndOf="@+id/password"
        android:layout_below="@+id/bday"
        android:textColor="@color/white"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmBtn"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>